# EditorConfig setup for TASOC Pipeline
# https://EditorConfig.org

[*]
charset = utf-8

# Python source files
[*.py]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# YAML configuration files
[*.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Code documentation
[*.rst]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Matches the exact files
[VERSION]
trim_trailing_whitespace = true
insert_final_newline = false
